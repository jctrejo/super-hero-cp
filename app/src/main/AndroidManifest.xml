<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coppel.superhero">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.coppel.superhero.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperHero">

        <activity
            android:name="com.coppel.superhero.ui.detail.DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.SuperHero.NoActionBar" />

        <activity
            android:name="com.coppel.superhero.ui.detail.DetailHeroActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.SuperHero.NoActionBar" />

        <activity android:name="com.coppel.superhero.ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
